<% content_for(:body) do %>
<style>
 #wrapper {
   background: url("<%= image_path('arches.png') %>") repeat;
   width: 100%;
 }

 section[role="main"] .row:last-child {
   padding-bottom: 2rem;
 }

 section[role="main"] .row {
   padding-top: 3rem;
 }

 section[role="main"] .row {
   background-color: rgba(255, 255, 255, 1);
 }

 .menu {
   background-color: #4d4c4e;
 }

 .menu li {
   padding-left: 1rem;
   padding-right: 1rem;
   font-size: 1.2em;
 }

 .footer {
   height: 40px;
   background-color: #4d4c4e;   
 }
 
</style>
<div id='wrapper'>
  <div class="row menu">
    <div class="small-12">
      <img src="<%= image_path('head.png') %>" />
      <ul class="inline-list">
	<li><a href="<%= root_path %>">главная</a></li>
	<li><a href="<%= speakers_path %>">спикеры</a></li>
      </ul>

    </div>
  </div>

  <section role="main"> <%= yield %> </section>

  <div class="row footer">
    <div class="small-12">
    </div>
  </div>

</div>

<% end %>
<%= render template: 'layouts/application' %>
