				}

			}
		});

		$(window).on('scroll',function(){
			var wst = $(window).scrollTop(),
				header = $('#section-head');

			if(wst > header.offset().top){
				header.addClass('fixed');
				header.css({
					'top': (-1)*(header.find('.logo').height() + 30)
				});
			} else {
				header.removeClass('fixed');
				header.css({
					'top': 0
				});
			}

		});

	});
</script>
