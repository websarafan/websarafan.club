<script>
	jQuery(document).ready(function ($) {

		var nav = $('#section-nav');

		$(window).on('scroll',function(){
			var wst = $(window).scrollTop(),
				header = $('#section-head');

			if(wst > header.find('.logo').parent().outerHeight()){
				$('body').addClass('fixed');
				header.css({
					'top': (-1)*header.find('.logo').parent().outerHeight()
				});
				$('body').css({
					'padding-top':  nav.outerHeight()*2
				})
			} else {
				$('body').removeClass('fixed');
				header.css({
					'top': 0
				});
				$('body').css({
					'padding-top': 0
				})
			}

		});

		$(document).on('click', '#section-nav a', function(){

			var attr = $(this).attr('data-scrollto'),
				ws = $('.scroll-ll[data-block="'+attr+'"]').offset().top;
			$('body, html').stop().animate({
				scrollTop: ws - 20
			},500);

			return false;
		});

		$(document).on('click', '#btn-pay-now', function(){

			var attr = $(this).attr('data-scrollto'),
				ws = $('.scroll-ll[data-block="s-reg"]').offset().top;
